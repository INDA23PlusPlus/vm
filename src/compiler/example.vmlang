def print_day(n) {
  chain (n) {
    1: { printf("monday"); break; }
    2: { printf("tuesday"); break; }
    3: { printf("wednesday"); break; }
    4: { printf("thursday"); break; }
    5: { printf("friday"); break; }
    6: { printf("saturday"); break; }
    7: { printf("sunday"); break; }

    printf("invalid input");
  }
}

