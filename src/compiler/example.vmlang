def sum_vectors() {
  a := { x: 1, y: 2, z: 3 };
  b := { x: 4, y: 5, z: 6 };

  c := {
    x: a.x + b.x,
    y: a.y + b.y,
    z: a.z + b.z,
  };

  ret c;
}

def sum_list() {
  list := { 1, 2, 3, 4, 5, 6 };

  sum := 0;

  for (i := 0; i < list.len; i++) {
    sum <- sum + list[i];
  }

  ret sum;
}
